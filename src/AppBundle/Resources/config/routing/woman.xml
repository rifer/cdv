<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="woman" path="/{category_id}">
        <default key="_controller">AppBundle:Woman:index</default>
    </route>

    <route id="woman_show" path="/{id}/show">
        <default key="_controller">AppBundle:Woman:show</default>
    </route>

    <route id="woman_new" path="/new/{category_id}">
        <default key="_controller">AppBundle:Woman:new</default>
    </route>

    <route id="woman_second_step" path="/second/{id}">
        <default key="_controller">AppBundle:Woman:second</default>
    </route>

    <route id="woman_create" path="/create/{category_id}" methods="POST">
        <default key="_controller">AppBundle:Woman:create</default>
    </route>

    <route id="woman_edit" path="/{id}/edit">
        <default key="_controller">AppBundle:Woman:edit</default>
    </route>

    <route id="woman_edition" path="/{id}/{object_class}/edition">
        <default key="_controller">AppBundle:Woman:edition</default>
    </route>

    <route id="woman_update" path="/{id}/update" methods="POST|PUT">
        <default key="_controller">AppBundle:Woman:update</default>
    </route>

    <route id="woman_update_second" path="/{id}/update_second" methods="POST|PUT">
        <default key="_controller">AppBundle:Woman:updateSecond</default>
    </route>


    <route id="woman_delete" path="/{id}/delete" methods="POST|DELETE">
        <default key="_controller">AppBundle:Woman:delete</default>
    </route>

    <route id="building_show" path="/building">
        <default key="_controller">AppBundle:Default:building</default>
    </route>

    <route id="catchall" path="/catchall">
        <default key="_controller">AppBundle:Default:catchall</default>
    </route>
</routes>
