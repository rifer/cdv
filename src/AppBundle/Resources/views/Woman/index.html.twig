{% extends 'AppBundle:default:layout_admin.html.twig' %}

{% block admin_content -%}
    <h1>Woman list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Name</th>
                <th>Biography</th>
                <th>Created</th>
                <th>Updated</th>
                <th>Slug</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('woman_show', { 'id': entity.id }) }}">{{ entity.name }} {{ entity.surname }}</a></td>
                <td>{{ entity.biography }}</td>
                <td>{% if entity.created %}{{ entity.created|date('d-m-Y') }}{% endif %}</td>
                <td>{% if entity.updated %}{{ entity.updated|date('d-m-Y') }}{% endif %}</td>
                <td>{{ entity.slug }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('woman_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('woman_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('woman_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
