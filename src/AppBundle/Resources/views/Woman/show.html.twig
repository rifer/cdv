{% extends 'AppBundle:default:layout_admin.html.twig' %}

{% block admin_content -%}
    <h1>Woman</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Surname</th>
                <td>{{ entity.surname }}</td>
            </tr>
            <tr>
                <th>Biography</th>
                <td>{{ entity.biography }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ entity.created|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{{ entity.updated|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ entity.slug }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('woman') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('woman_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
            <li><a href="{{ path('gallery_new',{'foreign_key':entity.id,'object_class':'woman'}) }}">Añadir galería</a> </li>
            {% for gallery in galleries %}
                <li><a href="{{ path('gallery_show', {'id': gallery.getId}) }}">{{ gallery }}</a> </li>

            {% else %}

            {% endfor %}
</ul>
{% endblock %}
